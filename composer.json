{
    "name": "lingoda/domain-events",
    "description": "Lingoda Domain Events Bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "doctrine/doctrine-bundle": "^2.4.3",
        "doctrine/orm": "^2.10",
        "doctrine/dbal": "<3.4",
        "nesbot/carbon": "^2.48",
        "symfony/event-dispatcher": "^4.4 || ^5.3 || ^6.0",
        "symfony/framework-bundle": "^4.4 || ^5.2 || ^6.0",
        "symfony/lock": "^5.3 || ^6.0",
        "symfony/messenger": "^5.3 || ^6.0",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "nyholm/symfony-bundle-test": "^2.0",
        "phpspec/phpspec": "^7.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.7",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-symfony": "^1.2",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "Lingoda\\DomainEventsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lingoda\\DomainEventsBundle\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-amqp": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
